model Album {
  id         String     @id @default(cuid())
  title      String
  start_date DateTime
  end_date   DateTime
  pictures   Picture[]
  blogPosts  BlogPost[]
}

model Picture {
  id      String @id @default(cuid())
  url     String
  album   Album  @relation(fields: [albumId], references: [id])
  albumId String
}

model BlogPost {
  id               String    @id @default(cuid())
  title            String
  content          String
  publication_date DateTime
  start_date       DateTime
  end_date         DateTime
  albums           Album[]
  countries        Country[]
}

model Country {
  id        Int        @id
  blogPosts BlogPost[]
}
